<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_temp"
        android:layout_width="147dp"
        android:layout_height="72dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="193dp"
        android:layout_marginBottom="419dp"
        android:fontFamily="serif"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="42dp" />

    <ImageView
        android:id="@+id/tempIcon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="433dp"
        app:srcCompat="@mipmap/ic_tempereture_foreground" />

    <ImageView
        android:id="@+id/weatherIcon"
        android:layout_width="201dp"
        android:layout_height="204dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="210dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="292dp"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textView_humidity"
        android:layout_width="77dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="367dp"
        android:textColor="@color/white"
        android:textSize="27dp" />

    <ImageView
        android:id="@+id/statusIcon"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="351dp"
        android:layout_marginBottom="288dp"
        app:srcCompat="@mipmap/ic_description_foreground" />

    <TextView
        android:id="@+id/textView_description"
        android:layout_width="199dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="285dp"
        android:textColor="@color/white"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/humidIcon"
        android:layout_width="74dp"
        android:layout_height="58dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="338dp"
        android:layout_marginBottom="359dp"
        app:srcCompat="@mipmap/ic_humidity_foreground" />

    <EditText
        android:id="@+id/enterCity"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="132dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="124dp"
        android:hint="Enter the City"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="299dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/baseline_search" />

    <ImageView
        android:id="@+id/cityIcon"
        android:layout_width="44dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="85dp"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="127dp"
        app:srcCompat="@mipmap/ic_location_foreground" />

    <TextView
        android:id="@+id/textViewHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="643dp"
        android:fontFamily="serif"
        android:text="Weather Forecast"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="45dp" />

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="107dp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="195dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="521dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="351dp"
        android:background="@null"
        app:srcCompat="@drawable/baseline_arrow_back" />

</RelativeLayout>

